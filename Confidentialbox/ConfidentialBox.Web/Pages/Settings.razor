                                    </div>
                                    <div>
                                        <button class="btn btn-outline-primary" @onclick='() => NavigationManager.NavigateTo("/ai-security#settings")'>
                                            <i class="fas fa-sliders-h me-1"></i> Abrir AI Security
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    break;
            }
        </div>

