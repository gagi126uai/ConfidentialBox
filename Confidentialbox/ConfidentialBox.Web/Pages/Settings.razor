@page "/settings"
@attribute [Authorize(Roles = "Admin")]
@using Microsoft.AspNetCore.Authorization
@using ConfidentialBox.Core.Configuration
@using ConfidentialBox.Core.DTOs
@using System.Linq
@inject ISettingsService SettingsService
@inject NavigationManager NavigationManager

<PageTitle>Configuración avanzada - ConfidentialBox</PageTitle>

<h1 class="mb-4"><i class="fas fa-cogs"></i> Configuración de la plataforma</h1>

@if (isLoading)
{
    <div class="text-center my-5">
        <div class="spinner-border" role="status"></div>
        <p class="mt-3">Cargando ajustes seguros...</p>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-header bg-white border-bottom">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <button type="button"
                            class='@($"nav-link {(activeTab == "storage" ? "active" : string.Empty)}")'
                            @onclick='() => SetActiveTab("storage")'>
                        <i class="fas fa-database"></i> Almacenamiento
                    </button>
                </li>
                <li class="nav-item">
                    <button type="button"
                            class='@($"nav-link {(activeTab == "email" ? "active" : string.Empty)}")'
                            @onclick='() => SetActiveTab("email")'>
                        <i class="fas fa-envelope"></i> Correo seguro
                    </button>
                </li>
                <li class="nav-item">
                    <button type="button"
                            class='@($"nav-link {(activeTab == "notifications" ? "active" : string.Empty)}")'
                            @onclick='() => SetActiveTab("notifications")'>
                        <i class="fas fa-bell"></i> Notificaciones
                    </button>
                </li>
                <li class="nav-item">
                    <button type="button"
                            class='@($"nav-link {(activeTab == "viewer" ? "active" : string.Empty)}")'
                            @onclick='() => SetActiveTab("viewer")'>
                        <i class="fas fa-file-pdf"></i> Visor PDF
                    </button>
                </li>
                <li class="nav-item">
                    <button type="button"
                            class='@($"nav-link {(activeTab == "security" ? "active" : string.Empty)}")'
                            @onclick='() => SetActiveTab("security")'>
                        <i class="fas fa-user-shield"></i> Seguridad de acceso
                    </button>
                </li>
            </ul>
        </div>
        <div class="card-body">
            @switch (activeTab)
            {
                case "storage":
                    <div class="row g-4">
                        <div class="col-lg-7">
                            <EditForm Model="storageSettings" OnValidSubmit="UpdateStorageSettingsAsync">
                                <DataAnnotationsValidator />

                                @if (!string.IsNullOrEmpty(storageMessage))
                                {
                                    <div class="alert @(storageSuccess ? "alert-success" : "alert-danger")">@storageMessage</div>
                                }

                                <div class="form-check form-switch mb-3">
                                    <InputCheckbox @bind-Value="storageSettings.StoreInDatabase" class="form-check-input" id="dbStorage" />
                                    <label class="form-check-label" for="dbStorage">Guardar en base de datos encriptada</label>
                                </div>

                                <div class="form-check form-switch mb-3">
                                    <InputCheckbox @bind-Value="storageSettings.StoreOnFileSystem" class="form-check-input" id="fsStorage" />
                                    <label class="form-check-label" for="fsStorage">Guardar en almacenamiento seguro del servidor</label>
                                </div>

                                <div class="form-check form-switch mb-3">
                                    <InputCheckbox @bind-Value="storageSettings.UseUserScopedDirectories" class="form-check-input" id="userDirs" />
                                    <label class="form-check-label" for="userDirs">Crear carpetas aisladas por usuario</label>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Directorio seguro</label>
                                    <InputText @bind-Value="storageSettings.FileSystemDirectory" class="form-control" />
                                    <div class="form-text">Ruta local o UNC con permisos restringidos. Se crea automáticamente si no existe.</div>
                                </div>

                                <div class="row g-3 mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Límite total (GB)</label>
                                        <InputNumber @bind-Value="storageSettings.TotalStorageLimitGb" class="form-control" min="0" />
                                        <div class="form-text">0 = ilimitado. Controla el uso de disco global.</div>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Límite por usuario (GB)</label>
                                        <InputNumber @bind-Value="storageSettings.PerUserStorageLimitGb" class="form-control" min="0" />
                                        <div class="form-text">0 = ilimitado. Cuota individual por cuenta.</div>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary" disabled="@storageSaving">
                                    @if (storageSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                        <span>Guardando…</span>
                                    }
                                    else
                                    {
                                        <span>Actualizar almacenamiento</span>
                                    }
                                </button>
                            </EditForm>
                        </div>
                        <div class="col-lg-5">
                            <div class="alert alert-info">
                                <h6 class="fw-semibold"><i class="fas fa-info-circle"></i> Resumen</h6>
                                <ul class="small mb-0">
                                    <li>Las cuotas se aplican antes de aceptar nuevas subidas.</li>
                                    <li>Las carpetas por usuario evitan colisiones y simplifican auditorías.</li>
                                    <li>Siempre puedes combinar base de datos + sistema de archivos para redundancia.</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    break;
                case "email":
                    <EditForm Model="emailServer" OnValidSubmit="UpdateEmailServerAsync">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        @if (!string.IsNullOrEmpty(emailMessage))
                        {
                            <div class="alert @(emailSuccess ? "alert-success" : "alert-danger")">@emailMessage</div>
                        }

                        <div class="row g-3">
                            <div class="col-md-8">
                                <label class="form-label">Servidor SMTP</label>
                                <InputText @bind-Value="emailServer.SmtpHost" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Puerto</label>
                                <InputNumber @bind-Value="emailServer.Port" class="form-control" />
                            </div>
                        </div>

                        <div class="form-check form-switch my-3">
                            <InputCheckbox @bind-Value="emailServer.UseSsl" class="form-check-input" id="useSsl" />
                            <label class="form-check-label" for="useSsl">Usar conexión cifrada (SSL/TLS)</label>
                        </div>

                        <div class="form-check form-switch my-3">
                            <InputCheckbox @bind-Value="emailServer.UseStartTls" class="form-check-input" id="useStartTls" />
                            <label class="form-check-label" for="useStartTls">Intentar STARTTLS si el servidor lo soporta</label>
                        </div>

                        <div class="form-check form-switch my-3">
                            <InputCheckbox @bind-Value="emailServer.ValidateCertificates" class="form-check-input" id="validateCerts" />
                            <label class="form-check-label" for="validateCerts">Validar certificados del servidor</label>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Usuario</label>
                                <InputText @bind-Value="emailServer.Username" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Correo remitente</label>
                                <InputText @bind-Value="emailServer.FromEmail" class="form-control" />
                            </div>
                        </div>

                        <div class="row g-3 mt-3">
                            <div class="col-md-6">
                                <label class="form-label">Nombre remitente</label>
                                <InputText @bind-Value="emailServer.FromName" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Clave SMTP (dejar vacía para conservar)</label>
                                <InputText @bind-Value="emailServer.NewPassword" type="password" class="form-control" />
                                @if (emailServer.HasPassword)
                                {
                                    <div class="form-text text-success">Existe una clave almacenada de forma cifrada.</div>
                                }
                            </div>
                        </div>

                        <div class="row g-3 mt-1">
                            <div class="col-md-6">
                                <label class="form-label">Responder a (correo)</label>
                                <InputText @bind-Value="emailServer.ReplyToEmail" class="form-control" placeholder="opcional" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Responder a (nombre)</label>
                                <InputText @bind-Value="emailServer.ReplyToName" class="form-control" placeholder="opcional" />
                            </div>
                        </div>

                        <div class="row g-3 mt-1">
                            <div class="col-md-4">
                                <label class="form-label">Timeout de conexión (segundos)</label>
                                <InputNumber @bind-Value="emailServer.ConnectionTimeoutSeconds" class="form-control" min="5" max="300" />
                            </div>
                            <div class="col-md-8">
                                <label class="form-label">Autenticación</label>
                                <InputSelect @bind-Value="emailServer.AuthenticationMechanism" class="form-select">
                                    <option value="Auto">Automático</option>
                                    <option value="Plain">PLAIN</option>
                                    <option value="Login">LOGIN</option>
                                    <option value="CramMd5">CRAM-MD5</option>
                                </InputSelect>
                                <div class="form-text">Selecciona "Automático" para que ConfidentialBox negocie el mejor mecanismo disponible.</div>
                            </div>
                        </div>

                        <div class="row g-3 mt-1">
                            <div class="col-md-8">
                                <label class="form-label">Servidor de respaldo (opcional)</label>
                                <InputText @bind-Value="emailServer.SecondaryHost" class="form-control" placeholder="smtp-backup.miempresa.com" />
                                <div class="form-text">ConfidentialBox usará este host si el principal no responde.</div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Puerto respaldo</label>
                                <InputNumber @bind-Value="emailServer.SecondaryPort" class="form-control" min="1" max="65535" />
                            </div>
                        </div>

                        <div class="row g-3 mt-1">
                            <div class="col-md-6">
                                <label class="form-label">Reintentos ante fallo</label>
                                <InputNumber @bind-Value="emailServer.MaxRetryAttempts" class="form-control" min="0" max="10" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Backoff entre reintentos (segundos)</label>
                                <InputNumber @bind-Value="emailServer.RetryBackoffSeconds" class="form-control" min="5" max="600" />
                            </div>
                        </div>

                        <div class="card border-0 bg-light mt-4">
                            <div class="card-body">
                                <h6 class="fw-semibold text-uppercase small text-muted mb-3">Controles avanzados</h6>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-check form-switch">
                                            <InputCheckbox @bind-Value="emailServer.RequireTls12" class="form-check-input" id="requireTls12" />
                                            <label class="form-check-label" for="requireTls12">Forzar TLS 1.2 o superior</label>
                                        </div>
                                        <div class="form-check form-switch mt-2">
                                            <InputCheckbox @bind-Value="emailServer.AllowSelfSignedCertificates" class="form-check-input" id="allowSelfSigned" />
                                            <label class="form-check-label" for="allowSelfSigned">Aceptar certificados propios (solo entornos controlados)</label>
                                        </div>
                                        <div class="form-check form-switch mt-2">
                                            <InputCheckbox @bind-Value="emailServer.EnableDeliveryStatusNotifications" class="form-check-input" id="enableDsn" />
                                            <label class="form-check-label" for="enableDsn">Solicitar avisos de entrega / rebote</label>
                                        </div>
                                        <div class="form-check form-switch mt-2">
                                            <InputCheckbox @bind-Value="emailServer.TrackBounceReasons" class="form-check-input" id="trackBounce" />
                                            <label class="form-check-label" for="trackBounce">Registrar motivo detallado de rebotes</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-check form-switch">
                                            <InputCheckbox @bind-Value="emailServer.UseClientCertificate" class="form-check-input" id="useClientCert" />
                                            <label class="form-check-label" for="useClientCert">Adjuntar certificado cliente</label>
                                        </div>
                                        @if (emailServer.UseClientCertificate)
                                        {
                                            <div class="mt-2">
                                                <label class="form-label">Thumbprint del certificado</label>
                                                <InputText @bind-Value="emailServer.ClientCertificateThumbprint" class="form-control" placeholder="AA BB CC ..." />
                                                <div class="form-text">Se usará del almacén del sistema donde corre ConfidentialBox.</div>
                                            </div>
                                        }
                                        <div class="mt-3">
                                            <label class="form-label">Contacto operativo</label>
                                            <InputText @bind-Value="emailServer.OperationalContactEmail" class="form-control" placeholder="oncall@miempresa.com" />
                                            <div class="form-text">Recibe los avisos cuando falle el envío automático.</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary mt-4" disabled="@emailSaving">
                            @if (emailSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <span>Guardando…</span>
                            }
                            else
                            {
                                <span>Actualizar servidor</span>
                            }
                        </button>
                    </EditForm>
                    break;
                case "notifications":
                    <EditForm Model="notifications" OnValidSubmit="UpdateNotificationSettingsAsync">
                        <DataAnnotationsValidator />

                        @if (!string.IsNullOrEmpty(notificationMessage))
                        {
                            <div class="alert @(notificationSuccess ? "alert-success" : "alert-danger")">@notificationMessage</div>
                        }

                        <div class="form-check form-switch mb-3">
                            <InputCheckbox @bind-Value="notifications.SendSecurityAlerts" class="form-check-input" id="securityAlerts" />
                            <label class="form-check-label" for="securityAlerts">Enviar alertas críticas de seguridad</label>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Destinatarios alertas (separar por coma)</label>
                            <InputText @bind-Value="notifications.SecurityAlertRecipients" class="form-control" />
                        </div>

                        <div class="form-check form-switch mb-3">
                            <InputCheckbox @bind-Value="notifications.SendPasswordRecovery" class="form-check-input" id="pwdRecovery" />
                            <label class="form-check-label" for="pwdRecovery">Notificar recuperaciones de contraseña</label>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Destinatarios recuperación</label>
                            <InputText @bind-Value="notifications.PasswordRecoveryRecipients" class="form-control" />
                        </div>

                        <div class="form-check form-switch mb-3">
                            <InputCheckbox @bind-Value="notifications.SendUserInvitations" class="form-check-input" id="userInvites" />
                            <label class="form-check-label" for="userInvites">Enviar invitaciones y altas de usuarios</label>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Destinatarios invitaciones</label>
                            <InputText @bind-Value="notifications.UserInvitationRecipients" class="form-control" />
                        </div>

                        <button type="submit" class="btn btn-primary" disabled="@notificationsSaving">
                            @if (notificationsSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <span>Guardando…</span>
                            }
                            else
                            {
                                <span>Actualizar notificaciones</span>
                            }
                        </button>
                    </EditForm>
                    break;
                case "viewer":
                    <EditForm Model="pdfViewerSettings" OnValidSubmit="UpdatePdfViewerSettingsAsync">
                        <DataAnnotationsValidator />

                        @if (!string.IsNullOrEmpty(pdfViewerMessage))
                        {
                            <div class="alert @(pdfViewerSuccess ? "alert-success" : "alert-danger")">@pdfViewerMessage</div>
                        }

                        <div class="row g-4">
                            <div class="col-xl-8">
                                <div class="card border-0 shadow-sm mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title text-primary"><i class="fas fa-palette me-2"></i> Experiencia visual</h5>

                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <label class="form-label">Tema base</label>
                                                <InputSelect @bind-Value="pdfViewerSettings.Theme" class="form-select">
                                                    <option value="dark">Oscuro</option>
                                                    <option value="light">Claro</option>
                                                    <option value="custom">Personalizado</option>
                                                </InputSelect>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Posición de la barra</label>
                                                <InputSelect @bind-Value="pdfViewerSettings.ToolbarPosition" class="form-select">
                                                    <option value="top">Superior</option>
                                                    <option value="bottom">Inferior</option>
                                                </InputSelect>
                                            </div>
                                        </div>

                                        <div class="row g-3 mt-1">
                                            <div class="col-md-6">
                                                <label class="form-label">Familia tipográfica</label>
                                                <InputText @bind-Value="pdfViewerSettings.FontFamily" class="form-control" />
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Espaciado interno</label>
                                                <InputText @bind-Value="pdfViewerSettings.ViewerPadding" class="form-control" />
                                                <div class="form-text">Acepta valores CSS (ej: <code>1.5rem</code>).</div>
                                            </div>
                                        </div>

                                        <div class="row g-3 mt-1">
                                            <div class="col-md-3">
                                                <label class="form-label">Color acento</label>
                                                <InputText @bind-Value="pdfViewerSettings.AccentColor" type="color" class="form-control form-control-color" />
                                            </div>
                                            <div class="col-md-3">
                                                <label class="form-label">Fondo visor</label>
                                                <InputText @bind-Value="pdfViewerSettings.BackgroundColor" type="color" class="form-control form-control-color" />
                                            </div>
                                            <div class="col-md-3">
                                                <label class="form-label">Fondo barra</label>
                                                <InputText @bind-Value="pdfViewerSettings.ToolbarBackgroundColor" type="color" class="form-control form-control-color" />
                                            </div>
                                            <div class="col-md-3">
                                                <label class="form-label">Texto barra</label>
                                                <InputText @bind-Value="pdfViewerSettings.ToolbarTextColor" type="color" class="form-control form-control-color" />
                                            </div>
                                        </div>

                                        <div class="row g-3 mt-3">
                                            <div class="col-md-4">
                                                <div class="form-check form-switch">
                                                    <InputCheckbox @bind-Value="pdfViewerSettings.ShowToolbar" class="form-check-input" id="viewerToolbar" />
                                                    <label class="form-check-label" for="viewerToolbar">Mostrar barra personalizada</label>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-check form-switch">
                                                    <InputCheckbox @bind-Value="pdfViewerSettings.ShowFileDetails" class="form-check-input" id="viewerDetails" />
                                                    <label class="form-check-label" for="viewerDetails">Mostrar datos del archivo</label>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-check form-switch">
                                                    <InputCheckbox @bind-Value="pdfViewerSettings.ShowSearch" class="form-check-input" id="viewerSearch" />
                                                    <label class="form-check-label" for="viewerSearch">Habilitar búsqueda rápida</label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row g-3 mt-1">
                                            <div class="col-md-6 col-lg-3">
                                                <div class="form-check form-switch">
                                                    <InputCheckbox @bind-Value="pdfViewerSettings.ShowPageControls" class="form-check-input" id="viewerControls" />
                                                    <label class="form-check-label" for="viewerControls">Controles de zoom</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-lg-3">
                                                <div class="form-check form-switch">
                                                    <InputCheckbox @bind-Value="pdfViewerSettings.ShowPageIndicator" class="form-check-input" id="viewerPageIndicator" />
                                                    <label class="form-check-label" for="viewerPageIndicator">Indicador de página</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-lg-3">
                                                <div class="form-check form-switch">
                                                    <InputCheckbox @bind-Value="pdfViewerSettings.ShowDownloadButton" class="form-check-input" id="viewerDownloadBtn" />
                                                    <label class="form-check-label" for="viewerDownloadBtn">Botón de descarga</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-lg-3">
                                                <div class="form-check form-switch">
                                                    <InputCheckbox @bind-Value="pdfViewerSettings.ShowPrintButton" class="form-check-input" id="viewerPrintBtn" />
                                                    <label class="form-check-label" for="viewerPrintBtn">Botón de impresión</label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-check form-switch mt-1">
                                            <InputCheckbox @bind-Value="pdfViewerSettings.ShowFullscreenButton" class="form-check-input" id="viewerFullscreen" />
                                            <label class="form-check-label" for="viewerFullscreen">Botón de pantalla completa</label>
                                        </div>

                                        <div class="mt-3">
                                            <label class="form-label">CSS adicional (opcional)</label>
                                            <InputTextArea @bind-Value="pdfViewerSettings.CustomCss" class="form-control" rows="4" />
                                            <div class="form-text">Se inyectará dentro del visor, ideal para ajustes finos corporativos.</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="card border-0 shadow-sm mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title text-primary"><i class="fas fa-user-lock me-2"></i> Restricciones y controles</h5>

                                        <div class="row g-3">
                                            <div class="col-md-4">
                                                <div class="form-check form-switch">
                                                    <InputCheckbox @bind-Value="pdfViewerSettings.AllowDownload" class="form-check-input" id="viewerAllowDownload" />
                                                    <label class="form-check-label" for="viewerAllowDownload">Permitir descarga</label>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-check form-switch">
                                                    <InputCheckbox @bind-Value="pdfViewerSettings.AllowPrint" class="form-check-input" id="viewerAllowPrint" />
                                                    <label class="form-check-label" for="viewerAllowPrint">Permitir impresión</label>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-check form-switch">
                                                    <InputCheckbox @bind-Value="pdfViewerSettings.AllowCopy" class="form-check-input" id="viewerAllowCopy" />
                                                    <label class="form-check-label" for="viewerAllowCopy">Permitir copiado de texto</label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row g-3 mt-1">
                                            <div class="col-md-6">
                                                <div class="form-check form-switch">
                                                    <InputCheckbox @bind-Value="pdfViewerSettings.DisableContextMenu" class="form-check-input" id="viewerDisableMenu" />
                                                    <label class="form-check-label" for="viewerDisableMenu">Bloquear menú contextual</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-check form-switch">
                                                    <InputCheckbox @bind-Value="pdfViewerSettings.DisableTextSelection" class="form-check-input" id="viewerDisableSelection" />
                                                    <label class="form-check-label" for="viewerDisableSelection">Deshabilitar selección de texto</label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row g-3 mt-3">
                                            <div class="col-md-6">
                                                <label class="form-label">Zoom por defecto (%)</label>
                                                <InputNumber @bind-Value="pdfViewerSettings.DefaultZoomPercent" class="form-control" min="50" max="300" />
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Incremento zoom (%)</label>
