@page "/roles"
@using Microsoft.AspNetCore.Authorization
@using ConfidentialBox.Core.Configuration
@using System.Globalization
@attribute [Authorize(Roles = "Admin")]
@inject IRoleService RoleService

<PageTitle>Roles y Políticas - ConfidentialBox</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0"><i class="fas fa-shield-alt"></i> Roles y Políticas</h1>
    <button class="btn btn-primary" @onclick="ShowCreateModal">
        <i class="fas fa-plus"></i> Crear Rol
    </button>
</div>

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
    </div>
}

@if (isLoading)
{
    <div class="text-center my-5">
        <div class="spinner-border" role="status"></div>
        <p class="mt-3 text-muted">Cargando políticas seguras…</p>
    </div>
}
else if (roles.Any())
{
    <div class="row g-4">
        @foreach (var role in roles)
        {
            <div class="col-xl-4 col-lg-6">
                <div class="card h-100 @(role.IsSystemRole ? "border-primary" : string.Empty)">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">@role.Name</h5>
                            <small class="text-muted">@role.Description</small>
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-sm btn-outline-secondary" @onclick="() => ShowPolicyModal(role)">
                                <i class="fas fa-sliders-h"></i>
                            </button>
                            @if (!role.IsSystemRole)
                            {
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteRole(role.Id)">
                                    <i class="fas fa-trash"></i>
                                </button>
                            }
                        </div>
                    </div>
                    <div class="card-body">
                        @if (role.Policies.Any())
                        {
                            <div class="role-policy-grid small">
                                <div class="role-policy-section">
                                    <h6 class="role-policy-title">Acceso y sesiones</h6>
                                    <ul class="list-unstyled mb-0">
                                        <li><span class="fw-semibold">MFA:</span> @(GetBooleanPolicy(role, RolePolicyCatalog.PolicyRequiresMfa, true) ? "Obligatorio" : "Opcional")</li>
                                        <li><span class="fw-semibold">Caducidad de sesión:</span> @FormatMinutes(GetNumberPolicy(role, RolePolicyCatalog.PolicySessionTimeoutMinutes))</li>
                                        <li><span class="fw-semibold">Sesiones simultáneas:</span> @FormatCount(GetNumberPolicy(role, RolePolicyCatalog.PolicyMaxConcurrentSessions))</li>
                                        <li><span class="fw-semibold">Bloqueo automático:</span> @FormatMinutes(GetNumberPolicy(role, RolePolicyCatalog.PolicySessionLockoutMinutes))</li>
                                        <li><span class="fw-semibold">Acceso offline:</span> @(GetBooleanPolicy(role, RolePolicyCatalog.PolicyAllowOfflineAccess) ? "Permitido" : "Bloqueado")</li>
                                    </ul>
                                </div>
                                <div class="role-policy-section">
                                    <h6 class="role-policy-title">Protección de documentos</h6>
                                    <ul class="list-unstyled mb-0">
                                        <li><span class="fw-semibold">Tamaño máx.:</span> @FormatMegabytes(GetNumberPolicy(role, RolePolicyCatalog.PolicyMaxFileSizeMb))</li>
                                        <li><span class="fw-semibold">Cupo por rol:</span> @FormatGigabytes(GetNumberPolicy(role, RolePolicyCatalog.PolicyMaxStorageGb))</li>
                                        <li><span class="fw-semibold">Marca de agua:</span> @(GetBooleanPolicy(role, RolePolicyCatalog.PolicyForceWatermark, true) ? "Siempre activa" : "Opcional")</li>
                                        <li><span class="fw-semibold">Descargas/día:</span> @FormatCount(GetNumberPolicy(role, RolePolicyCatalog.PolicyMaxDailyDownloads))</li>
                                        <li><span class="fw-semibold">Justificación post-descarga:</span> @FormatMinutes(GetNumberPolicy(role, RolePolicyCatalog.PolicyDownloadJustificationWindowMinutes))</li>
                                    </ul>
                                </div>
                                <div class="role-policy-section">
                                    <h6 class="role-policy-title">Contexto operativo</h6>
                                    <ul class="list-unstyled mb-0">
                                        <li><span class="fw-semibold">IPs permitidas:</span> @FormatRangeList(GetPolicyValue(role, RolePolicyCatalog.PolicyAllowedIpRanges))</li>
                                        <li><span class="fw-semibold">Países habilitados:</span> @FormatRangeList(GetPolicyValue(role, RolePolicyCatalog.PolicyGeoAllowedCountries))</li>
                                    </ul>
                                </div>
                                <div class="role-policy-section">
                                    <h6 class="role-policy-title">Colaboración externa</h6>
                                    <ul class="list-unstyled mb-0">
                                        <li><span class="fw-semibold">Enlaces externos:</span> @(GetBooleanPolicy(role, RolePolicyCatalog.PolicyCanShareExternal) ? "Permitidos" : "Deshabilitados")</li>
                                        <li><span class="fw-semibold">Justificación:</span> @(GetBooleanPolicy(role, RolePolicyCatalog.PolicyRequireExternalJustification, true) ? "Requerida" : "Opcional")</li>
                                        <li><span class="fw-semibold">Aprobación previa:</span> @(GetBooleanPolicy(role, RolePolicyCatalog.PolicyExternalApproval) ? "Necesaria" : "No requerida")</li>
                                    </ul>
                                </div>
                                <div class="role-policy-section">
                                    <h6 class="role-policy-title">IA y auditoría</h6>
                                    <ul class="list-unstyled mb-0">
                                        <li><span class="fw-semibold">Panel de IA:</span> @(GetBooleanPolicy(role, RolePolicyCatalog.PolicyCanAccessAi) ? "Acceso total" : "Sin acceso")</li>
                                        <li><span class="fw-semibold">Respuesta automática:</span> @(GetBooleanPolicy(role, RolePolicyCatalog.PolicyEnableAiAutoResponse) ? "Activada" : "Manual")</li>
                                        <li><span class="fw-semibold">Escalamiento IA:</span> Nivel @FormatCount(GetNumberPolicy(role, RolePolicyCatalog.PolicyAiEscalationLevel))</li>
                                        <li><span class="fw-semibold">Auditoría:</span> @(GetBooleanPolicy(role, RolePolicyCatalog.PolicyCanViewAuditTrail) ? "Puede revisar" : "Solo reporte")</li>
                                        <li><span class="fw-semibold">Retención logs:</span> @FormatDays(GetNumberPolicy(role, RolePolicyCatalog.PolicyAuditRetentionDays))</li>
                                    </ul>
                                </div>
                                <div class="role-policy-section">
                                    <h6 class="role-policy-title">Respuesta a incidentes</h6>
                                    <ul class="list-unstyled mb-0">
                                        <li><span class="fw-semibold">Escalar tras:</span> @FormatMinutes(GetNumberPolicy(role, RolePolicyCatalog.PolicyIncidentAutoEscalateMinutes))</li>
                                        <li><span class="fw-semibold">Cuarentena automática:</span> @(GetBooleanPolicy(role, RolePolicyCatalog.PolicyQuarantineOnBreach) ? "Sí" : "No")</li>
                                    </ul>
                                </div>
                                <div class="role-policy-section">
                                    <h6 class="role-policy-title">Gobernanza de datos</h6>
                                    <ul class="list-unstyled mb-0">
                                        <li><span class="fw-semibold">Alertar cambios de rol:</span> @(GetBooleanPolicy(role, RolePolicyCatalog.PolicyNotifyOnRoleChanges) ? "Activo" : "Inactivo")</li>
                                        <li><span class="fw-semibold">Retención legal:</span> @(GetBooleanPolicy(role, RolePolicyCatalog.PolicyLegalHoldEnabled) ? "Aplicada" : "No aplica")</li>
                                        <li><span class="fw-semibold">Residencia requerida:</span> @FormatResidency(GetPolicyValue(role, RolePolicyCatalog.PolicyDataResidencyRequirement))</li>
                                    </ul>
                                </div>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted small mb-0">Este rol aún no tiene políticas configuradas.</p>
                        }
                    </div>
                    <div class="card-footer bg-transparent">
                        <button class="btn btn-outline-primary btn-sm" @onclick="() => ShowPolicyModal(role)">
                            <i class="fas fa-pen"></i> Editar políticas
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No se encontraron roles configurados.
    </div>
}

@if (showCreateModal)
{
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Crear nuevo rol</h5>
                    <button type="button" class="btn-close" @onclick="CloseCreateModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="newRole" OnValidSubmit="CreateRole">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label class="form-label">Nombre del rol</label>
                            <InputText @bind-Value="newRole.Name" class="form-control" />
                            <ValidationMessage For="() => newRole.Name" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Descripción</label>
                            <InputTextArea @bind-Value="newRole.Description" class="form-control" rows="3" />
                            <ValidationMessage For="() => newRole.Description" />
                        </div>

                        <div class="alert alert-light small">
                            <i class="fas fa-info-circle"></i> Las políticas predeterminadas se asignarán automáticamente. Podrás ajustarlas luego desde el panel.
                        </div>

                        <div class="modal-footer px-0">
                            <button type="button" class="btn btn-outline-secondary" @onclick="CloseCreateModal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Crear rol</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop show"></div>
}

@if (showPolicyModal && editingRole != null)
{
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Políticas de "@editingRole.Name"</h5>
                    <button type="button" class="btn-close" @onclick="ClosePolicyModal"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(policyMessage))
                    {
                        <div class="alert @(policySuccess ? "alert-success" : "alert-danger")" role="alert">
                            @policyMessage
                        </div>
                    }

                    @foreach (var section in GetPolicySections())
                    {
                        <div class="mb-4">
                            <div class="d-flex align-items-center mb-2">
                                <h6 class="text-uppercase text-muted small mb-0">@section.Key</h6>
                                <div class="flex-grow-1 ms-3 border-bottom"></div>
                            </div>

                            <div class="row g-4">
                                @foreach (var policy in section)
                                {
                                    <div class="col-md-6">
                                        <div class="border rounded p-3 h-100 shadow-sm-sm">
                                            <label class="form-label fw-semibold">@policy.DisplayName</label>

                                            if (policy.Options?.Any() == true)
                                            {
                                                <InputSelect @bind-Value="policy.Value" class="form-select">
                                                    @foreach (var option in policy.Options)
                                                    {
                                                        <option value="@option">@option</option>
                                                    }
                                                </InputSelect>
                                            }
                                            else
                                            {
                                                @switch (policy.ValueType)
                                                {
                                                    case "Boolean":
                                                        <div class="form-check form-switch">
                                                            <InputCheckbox class="form-check-input" @bind-Value="policy.BooleanValue" id="@($"policy-{policy.PolicyName}")" />
                                                            <label class="form-check-label" for="policy-@policy.PolicyName">@(policy.BooleanValue ? "Habilitado" : "Deshabilitado")</label>
                                                        </div>
                                                        break;
                                                    case "Number":
                                                        <InputNumber @bind-Value="policy.NumericValue" class="form-control" />
                                                        break;
                                                    default:
                                                        <InputText @bind-Value="policy.Value" class="form-control" />
                                                        break;
                                                }
                                            }

                                            @if (!string.IsNullOrWhiteSpace(policy.Description))
                                            {
                                                <p class="form-text">@policy.Description</p>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-outline-secondary" @onclick="ClosePolicyModal" disabled="@savingPolicies">Cerrar</button>
                    <button class="btn btn-primary" @onclick="SavePolicies" disabled="@savingPolicies">
                        @if (savingPolicies)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        Guardar cambios
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop show"></div>
}

@code {
    private readonly List<RoleDto> roles = new();
    private List<RolePolicyDefinitionDto> policyDefinitions = new();
    private bool isLoading = true;
    private string? successMessage;

    private bool showCreateModal;
    private CreateRoleRequest newRole = new();

    private bool showPolicyModal;
    private RoleDto? editingRole;
    private List<PolicyEditModel> editablePolicies = new();
    private bool savingPolicies;
    private string? policyMessage;
    private bool policySuccess;

    protected override async Task OnInitializedAsync()
    {
        policyDefinitions = await RoleService.GetPolicyDefinitionsAsync();
        await LoadRoles();
    }

    private async Task LoadRoles()
    {
        isLoading = true;
        try
        {
            roles.Clear();
            var fetched = await RoleService.GetAllRolesAsync();
            roles.AddRange(fetched.OrderBy(r => r.Name));
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowCreateModal()
    {
        newRole = new CreateRoleRequest();
        showCreateModal = true;
    }

    private void CloseCreateModal()
    {
        showCreateModal = false;
    }

    private async Task CreateRole()
    {
        var created = await RoleService.CreateRoleAsync(newRole);
        if (created != null)
        {
            roles.Add(created);
            roles.Sort((a, b) => string.Compare(a.Name, b.Name, StringComparison.OrdinalIgnoreCase));
            successMessage = $"Rol '{created.Name}' creado correctamente.";
        }
        showCreateModal = false;
    }

    private async Task DeleteRole(string roleId)
    {
        if (!await RoleService.DeleteRoleAsync(roleId))
        {
            successMessage = "No se pudo eliminar el rol.";
            return;
        }

        var index = roles.FindIndex(r => r.Id == roleId);
        if (index >= 0)
        {
            var removed = roles[index];
            roles.RemoveAt(index);
            successMessage = $"Rol '{removed.Name}' eliminado.";
        }
    }

    private void ShowPolicyModal(RoleDto role)
    {
        editingRole = role;
        BuildEditablePolicies(role);
        policyMessage = null;
        policySuccess = false;
        showPolicyModal = true;
    }

    private void ClosePolicyModal()
    {
        showPolicyModal = false;
        editingRole = null;
        editablePolicies.Clear();
        policyMessage = null;
    }

    private async Task SavePolicies()
    {
        if (editingRole == null)
        {
            return;
        }

        savingPolicies = true;
        policyMessage = null;
        try
        {
            var payload = editablePolicies.ToDictionary(p => p.PolicyName, p => p.Value);
            var updated = await RoleService.UpdatePoliciesAsync(editingRole.Id, payload);
            if (updated == null)
            {
                policySuccess = false;
                policyMessage = "No se pudieron guardar los cambios.";
                return;
            }

            var index = roles.FindIndex(r => r.Id == updated.Id);
            if (index >= 0)
            {
                roles[index] = updated;
            }

            editingRole = updated;
            BuildEditablePolicies(updated);
            policySuccess = true;
            policyMessage = "Políticas actualizadas correctamente.";
        }
        finally
        {
            savingPolicies = false;
        }
    }

    private void BuildEditablePolicies(RoleDto role)
    {
        editablePolicies = policyDefinitions
            .Select(definition =>
            {
                var existing = role.Policies.FirstOrDefault(p => p.PolicyName.Equals(definition.PolicyName, StringComparison.OrdinalIgnoreCase));
                return new PolicyEditModel
                {
                    PolicyName = definition.PolicyName,
                    DisplayName = string.IsNullOrWhiteSpace(definition.DisplayName) ? definition.PolicyName : definition.DisplayName,
                    Description = definition.Description,
                    ValueType = definition.ValueType,
                    Options = definition.Options,
                    Value = existing?.PolicyValue ?? definition.DefaultValue ?? string.Empty,
                    Category = definition.Category
                };
            })
            .ToList();

        foreach (var extra in role.Policies.Where(p => policyDefinitions.All(d => !d.PolicyName.Equals(p.PolicyName, StringComparison.OrdinalIgnoreCase))))
        {
            editablePolicies.Add(new PolicyEditModel
            {
                PolicyName = extra.PolicyName,
                DisplayName = extra.DisplayName ?? extra.PolicyName,
                Description = extra.Description ?? string.Empty,
                ValueType = extra.ValueType ?? "Text",
                Options = Array.Empty<string>(),
                Value = extra.PolicyValue,
                Category = "Otras políticas"
            });
        }
    }

    private IEnumerable<IGrouping<string, PolicyEditModel>> GetPolicySections()
    {
        return editablePolicies
            .GroupBy(p => string.IsNullOrWhiteSpace(p.Category) ? "Otras políticas" : p.Category)
            .OrderBy(g =>
            {
                var index = Array.IndexOf(PolicyCategoryOrder, g.Key);
                return index >= 0 ? index : PolicyCategoryOrder.Length;
            });
    }

    private static string? GetPolicyValue(RoleDto role, string policyName)
    {
        return role.Policies
            .FirstOrDefault(p => p.PolicyName.Equals(policyName, StringComparison.OrdinalIgnoreCase))?
            .PolicyValue;
    }

    private static bool GetBooleanPolicy(RoleDto role, string policyName, bool defaultValue = false)
    {
        var raw = GetPolicyValue(role, policyName);
        return bool.TryParse(raw, out var parsed) ? parsed : defaultValue;
    }

    private static int? GetNumberPolicy(RoleDto role, string policyName)
    {
        var raw = GetPolicyValue(role, policyName);
        if (int.TryParse(raw, NumberStyles.Any, CultureInfo.InvariantCulture, out var parsed))
        {
            return parsed;
        }

        return null;
    }

    private static string FormatMinutes(int? minutes)
    {
        return minutes.HasValue && minutes.Value > 0
            ? $"{minutes.Value} min"
            : "Sin límite";
    }

    private static string FormatMegabytes(int? megabytes)
    {
        return megabytes.HasValue && megabytes.Value > 0
            ? $"{megabytes.Value.ToString("N0", CultureInfo.InvariantCulture)} MB"
            : "Sin límite";
    }

    private static string FormatGigabytes(int? gigabytes)
    {
        return gigabytes.HasValue && gigabytes.Value > 0
            ? $"{gigabytes.Value.ToString("N0", CultureInfo.InvariantCulture)} GB"
            : "Sin límite";
    }

    private static string FormatCount(int? value)
    {
        return value.HasValue && value.Value > 0
            ? value.Value.ToString(CultureInfo.InvariantCulture)
            : "Sin límite";
    }

    private static string FormatDays(int? days)
    {
        return days.HasValue && days.Value > 0
            ? $"{days.Value} días"
            : "Sin retención";
    }

    private static string FormatRangeList(string? value)
        => string.IsNullOrWhiteSpace(value) ? "Sin restricción" : value;

    private static string FormatResidency(string? value)
        => string.IsNullOrWhiteSpace(value) ? "Global" : value;

    private static string GetPolicyLabel(PolicyDto policy)
        => string.IsNullOrWhiteSpace(policy.DisplayName) ? policy.PolicyName : policy.DisplayName;

    private static string FormatPolicyValue(PolicyDto policy)
    {
        return policy.ValueType switch
        {
            "Boolean" => policy.PolicyValue.Equals("true", StringComparison.OrdinalIgnoreCase) ? "Habilitado" : "Deshabilitado",
            "Number" => policy.PolicyValue,
            _ => string.IsNullOrWhiteSpace(policy.PolicyValue) ? "(Sin valor)" : policy.PolicyValue
        };
    }

    private static readonly string[] PolicyCategoryOrder = new[]
    {
        "Operaciones de archivo",
        "Acceso y sesiones",
        "Contexto operativo",
        "Colaboración externa",
        "Protección de documentos",
        "Respuesta a incidentes",
        "IA y automatización",
        "Gobernanza de datos",
        "Auditoría y cumplimiento",
        "Otras políticas"
    };

    private class PolicyEditModel
    {
        public string PolicyName { get; set; } = string.Empty;
        public string DisplayName { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public string ValueType { get; set; } = string.Empty;
        public IReadOnlyList<string> Options { get; set; } = Array.Empty<string>();
        public string Value { get; set; } = string.Empty;
        public string Category { get; set; } = string.Empty;

        public bool BooleanValue
        {
            get => Value.Equals("true", StringComparison.OrdinalIgnoreCase);
            set => Value = value.ToString().ToLowerInvariant();
        }

        public decimal NumericValue
        {
            get => decimal.TryParse(Value, System.Globalization.NumberStyles.Any, System.Globalization.CultureInfo.InvariantCulture, out var number) ? number : 0;
            set => Value = value.ToString(System.Globalization.CultureInfo.InvariantCulture);
        }
    }
}
