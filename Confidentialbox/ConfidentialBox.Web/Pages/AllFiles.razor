@page "/all-files"
@attribute [Authorize(Roles = "Admin")]
@inject IFileService FileService
@inject NavigationManager NavigationManager
@inject IJSRuntime JS
@using System.Linq

<PageTitle>Archivos de la organización - ConfidentialBox</PageTitle>

<div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-4">
    <div>
        <h1 class="mb-1"><i class="fas fa-folder"></i> Archivos de la organización</h1>
        <p class="text-muted mb-0">Gestiona los archivos activos, la papelera y el acceso rápido a los recursos críticos.</p>
    </div>
    <ul class="nav nav-pills secure-files-tabs">
        <li class="nav-item">
            <button class="nav-link @GetTabClass("active")" @onclick="() => SwitchTab("active")">
                Activos
                <span class="badge bg-light text-dark ms-1">@((activeFiles?.Count ?? 0))</span>
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link @GetTabClass("deleted")" @onclick="() => SwitchTab("deleted")">
                Papelera
                <span class="badge bg-light text-dark ms-1">@((deletedFiles?.Count ?? 0))</span>
            </button>
        </li>
    </ul>
</div>

@if (!string.IsNullOrEmpty(alertMessage))
{
    <div class="alert @(alertSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
        @alertMessage
        <button type="button" class="btn-close" @onclick="() => alertMessage = null"></button>
    </div>
}

@if (isLoading)
{
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <div class="spinner-border" role="status"></div>
            <p class="mt-3 text-muted">Cargando @GetCurrentTabTitle().ToLowerInvariant()...</p>
        </div>
    </div>
}
else if (!string.IsNullOrEmpty(CurrentError))
{
    <div class="alert alert-danger" role="alert">
        <i class="fas fa-triangle-exclamation me-2"></i>@CurrentError
    </div>
}
else if (CurrentFiles == null || !CurrentFiles.Any())
{
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
            <h4 class="mb-2">No hay archivos @(activeTab == "active" ? "activos" : "en la papelera").</h4>
            <p class="text-muted mb-0">@(activeTab == "active" ? "Cuando los usuarios suban archivos, aparecerán aquí." : "Los archivos eliminados recientemente se mostrarán en esta vista.")</p>
        </div>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Archivo</th>
                            <th>Propietario</th>
                            <th>@(activeTab == "active" ? "Fecha de subida" : "Eliminado")</th>
                            <th>Accesos</th>
                            <th>Estado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var file in CurrentFiles)
                        {
                            <tr>
                                <td>
                                    <button type="button"
                                            class="secure-file-link"
                                            @onclick="() => OpenFile(file)"
                                            disabled="@(isProcessing || string.IsNullOrWhiteSpace(file.ShareLink))">
                                        <i class="fas @(file.IsPdf ? "fa-file-pdf text-danger" : "fa-file-alt text-primary") me-2"></i>
                                        @file.OriginalFileName
                                    </button>
                                    <div class="text-muted small">@FormatBytes(file.FileSizeBytes)</div>
                                </td>
                                <td>@file.UploadedByUserName</td>
                                <td>
                                    @if (activeTab == "active")
                                    {
                                        @file.UploadedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                    }
                                    else
                                    {
                                        @(file.DeletedAt?.ToLocalTime().ToString("dd/MM/yyyy HH:mm") ?? "-")
                                    }
                                </td>
                                <td>
                                    @file.CurrentAccessCount
                                    @if (file.MaxAccessCount.HasValue)
                                    {
                                        <span class="text-muted">/ @file.MaxAccessCount</span>
                                    }
                                </td>
                                <td>@RenderStatusBadge(file)</td>
                                <td class="text-end">
                                    @if (activeTab == "active")
                                    {
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-secondary"
                                                    title="Ver archivo"
                                                    disabled="@(isProcessing || string.IsNullOrWhiteSpace(file.ShareLink))"
                                                    @onclick="() => OpenFile(file)">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-danger"
                                                    title="Enviar a papelera"
                                                    disabled="@isProcessing"
                                                    @onclick="() => DeleteFile(file)">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-success"
                                                    title="Restaurar"
                                                    disabled="@isProcessing"
                                                    @onclick="() => RestoreFile(file)">
                                                <i class="fas fa-undo"></i>
                                            </button>
                                            <button class="btn btn-outline-danger"
                                                    title="Eliminar definitivamente"
                                                    disabled="@isProcessing"
                                                    @onclick="() => PurgeFile(file)">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@code {
    private List<FileDto>? activeFiles;
    private List<FileDto>? deletedFiles;
    private bool isLoading = true;
    private bool isProcessing;
    private string activeTab = "active";
    private bool activeLoaded;
    private bool deletedLoaded;
    private string? activeError;
    private string? deletedError;
    private string? alertMessage;
    private bool alertSuccess;

    private IEnumerable<FileDto>? CurrentFiles => activeTab == "active" ? activeFiles : deletedFiles;
    private string? CurrentError => activeTab == "active" ? activeError : deletedError;

    protected override async Task OnInitializedAsync()
    {
        await LoadActiveAsync(force: true);
    }

    private async Task SwitchTab(string tab)
    {
        if (activeTab == tab)
        {
            return;
        }

        activeTab = tab;
        await EnsureTabDataAsync(tab);
    }

    private async Task EnsureTabDataAsync(string tab)
    {
        if (tab == "active" && !activeLoaded)
        {
            await LoadActiveAsync(force: true);
        }
        else if (tab == "deleted" && !deletedLoaded)
        {
            await LoadDeletedAsync(force: true);
        }
        StateHasChanged();
    }

    private async Task LoadActiveAsync(bool force = false)
    {
        if (activeLoaded && !force)
        {
            return;
        }

        isLoading = true;
        StateHasChanged();

        try
        {
            activeFiles = await FileService.GetAllFilesAsync();
            activeError = null;
            activeLoaded = true;
        }
        catch (Exception ex)
        {
            activeError = $"No se pudieron cargar los archivos activos: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadDeletedAsync(bool force = false)
    {
        if (deletedLoaded && !force)
        {
            return;
        }

        isLoading = true;
        StateHasChanged();

        try
        {
            deletedFiles = await FileService.GetDeletedFilesAsync();
            deletedError = null;
            deletedLoaded = true;
        }
        catch (Exception ex)
        {
            deletedError = $"No se pudieron cargar los archivos de la papelera: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DeleteFile(FileDto file)
    {
        if (isProcessing)
        {
            return;
        }

        isProcessing = true;
        alertMessage = null;

        try
        {
            var result = await FileService.DeleteFileAsync(file.Id);
            alertSuccess = result;
            alertMessage = result
                ? $"'{file.OriginalFileName}' fue enviado a la papelera."
                : "No se pudo enviar el archivo a la papelera.";

            if (result)
            {
                await LoadActiveAsync(force: true);
                await LoadDeletedAsync(force: true);
            }
        }
        catch (Exception ex)
        {
            alertSuccess = false;
            alertMessage = $"No se pudo eliminar el archivo: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
            await EnsureTabDataAsync(activeTab);
        }
    }

    private async Task RestoreFile(FileDto file)
    {
        if (isProcessing)
        {
            return;
        }

        isProcessing = true;
        alertMessage = null;

        try
        {
            var result = await FileService.RestoreFileAsync(file.Id);
            alertSuccess = result;
            alertMessage = result
                ? $"'{file.OriginalFileName}' fue restaurado correctamente."
                : "No se pudo restaurar el archivo.";

            if (result)
            {
                await LoadDeletedAsync(force: true);
                await LoadActiveAsync(force: true);
            }
        }
        catch (Exception ex)
        {
            alertSuccess = false;
            alertMessage = $"No se pudo restaurar el archivo: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
            await EnsureTabDataAsync(activeTab);
        }
    }

    private async Task PurgeFile(FileDto file)
    {
        if (isProcessing)
        {
            return;
        }

        var confirm = await JS.InvokeAsync<bool>("confirm", $"¿Eliminar definitivamente '{file.OriginalFileName}'? Esta acción no se puede deshacer.");
        if (!confirm)
        {
            return;
        }

        isProcessing = true;
        alertMessage = null;

        try
        {
            var result = await FileService.PurgeFileAsync(file.Id);
            alertSuccess = result;
            alertMessage = result
                ? $"'{file.OriginalFileName}' se eliminó definitivamente."
                : "No se pudo eliminar el archivo de manera definitiva.";

            if (result)
            {
                await LoadDeletedAsync(force: true);
            }
        }
        catch (Exception ex)
        {
            alertSuccess = false;
            alertMessage = $"No se pudo eliminar definitivamente el archivo: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
            await EnsureTabDataAsync(activeTab);
        }
    }

    private void OpenFile(FileDto file)
    {
        if (string.IsNullOrWhiteSpace(file.ShareLink))
        {
            return;
        }

        var destination = file.IsPdf ? $"/view-pdf/{file.ShareLink}" : $"/access/{file.ShareLink}";
        NavigationManager.NavigateTo(destination);
    }

    private string GetTabClass(string tab) => activeTab == tab ? "active" : string.Empty;

    private string GetCurrentTabTitle() => activeTab == "active" ? "Archivos activos" : "Papelera";

    private static string FormatBytes(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        if (bytes == 0)
        {
            return "0 B";
        }

        var order = (int)Math.Floor(Math.Log(bytes, 1024));
        order = Math.Min(order, sizes.Length - 1);
        var adjusted = bytes / Math.Pow(1024, order);
        return $"{adjusted:0.##} {sizes[order]}";
    }

    private static MarkupString RenderStatusBadge(FileDto file)
    {
        if (file.IsDeleted)
        {
            return (MarkupString)"<span class='badge bg-secondary'><i class=\"fas fa-trash\"></i> En papelera</span>";
        }

        if (file.IsBlocked)
        {
            return (MarkupString)"<span class='badge bg-danger'><i class=\"fas fa-ban\"></i> Bloqueado</span>";
        }

        if (file.ExpiresAt.HasValue && file.ExpiresAt.Value < DateTime.UtcNow)
        {
            return (MarkupString)"<span class='badge bg-warning text-dark'><i class=\"fas fa-clock\"></i> Expirado</span>";
        }

        return (MarkupString)"<span class='badge bg-success'><i class=\"fas fa-check\"></i> Activo</span>";
    }
}
