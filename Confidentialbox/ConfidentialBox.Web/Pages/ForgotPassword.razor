@page "/forgot-password"
@using ConfidentialBox.Core.DTOs
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Recuperar contraseña - ConfidentialBox</PageTitle>

<h1 class="mb-4">¿Olvidaste tu contraseña?</h1>

@if (success)
{
    <div class="alert alert-success">
        <strong>¡Listo!</strong> Si el correo está registrado, recibirás un enlace para restablecer tu contraseña en unos minutos.
    </div>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">
        @errorMessage
    </div>
}

<EditForm Model="request" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Correo electrónico corporativo</label>
        <InputText @bind-Value="request.Email" class="form-control" />
        <ValidationMessage For="() => request.Email" />
    </div>

    <button class="btn btn-primary" disabled="@isSubmitting">
        @if (isSubmitting)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
            <span>Enviando...</span>
        }
        else
        {
            <span>Enviar enlace seguro</span>
        }
    </button>

    <button type="button" class="btn btn-link" @onclick="() => Navigation.NavigateTo("/login")">
        Volver al inicio de sesión
    </button>
</EditForm>

@code {
    private readonly ForgotPasswordRequest request = new();
    private bool success;
    private bool isSubmitting;
    private string? errorMessage;

    private async Task HandleSubmit()
    {
        errorMessage = null;
        success = false;
        isSubmitting = true;
        try
        {
            success = await AuthService.ForgotPasswordAsync(request);
            if (!success)
            {
                errorMessage = "No pudimos enviar el correo de recuperación. Verifique la configuración del servidor o contacte al administrador.";
            }
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
