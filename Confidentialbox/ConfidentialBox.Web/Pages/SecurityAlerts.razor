    private async Task DownloadFileAsync()
    {
        if (fileMetadata == null || downloadInProgress)
        {
            return;
        }

        try
        {
            downloadInProgress = true;
            var content = await Http.GetFromJsonAsync<FileContentResponse>($"api/files/content/{fileMetadata.ShareLink}");
            if (content == null || !content.Success)
            {
                reviewError = content?.ErrorMessage ?? "No se pudo descargar el archivo asociado.";
                return;
            }

            var bytes = Convert.FromBase64String(content.EncryptedContent);
            await JS.InvokeVoidAsync("confidentialBox.downloadFile", content.FileName ?? fileMetadata.OriginalFileName, "application/octet-stream", bytes);
        }
        catch (Exception ex)
        {
            reviewError = $"Error al descargar el archivo: {ex.Message}";
        }
        finally
        {
            downloadInProgress = false;
        }
    }

