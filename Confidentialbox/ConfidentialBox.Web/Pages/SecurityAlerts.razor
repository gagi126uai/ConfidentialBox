    private void TryPopulateLastScan()
    {
        lastScanResult = null;
        var scanAction = alertDetail?.Actions?.FirstOrDefault(a => a.ActionType?.Equals("ScanFile", StringComparison.OrdinalIgnoreCase) == true);
        if (scanAction?.Metadata is null)
        {
            return;
        }

        try
        {
            using var doc = JsonDocument.Parse(scanAction.Metadata);
            var score = doc.RootElement.TryGetProperty("ThreatScore", out var scoreElement) && scoreElement.TryGetDouble(out var parsedScore)
                ? parsedScore
                : 0;
            var recommendation = doc.RootElement.TryGetProperty("Recommendation", out var recElement)
                ? recElement.GetString()
                : null;
            var threats = doc.RootElement.TryGetProperty("Threats", out var threatsElement) && threatsElement.ValueKind == JsonValueKind.Array
                ? threatsElement.EnumerateArray().Select(t => t.GetString() ?? string.Empty).Where(t => !string.IsNullOrWhiteSpace(t)).ToList()
                : new List<string>();

            lastScanResult = new FileThreatAnalysisDto
            {
                ThreatScore = score,
                Recommendation = recommendation ?? string.Empty,
                Threats = threats
            };
        }
        catch
        {
            lastScanResult = null;
        }
    }

