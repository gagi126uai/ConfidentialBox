@page "/register"
@inject IAuthService AuthService
@inject NavigationManager NavigationManager
@layout EmptyLayout

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2><i class="fas fa-user-plus"></i> Crear Cuenta</h2>
                        <p class="text-muted">Regístrate en ConfidentialBox</p>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @errorMessage
                        </div>
                    }

                    @if (isCheckingAvailability)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border" role="status"></div>
                            <p class="mt-3">Verificando disponibilidad...</p>
                        </div>
                    }
                    else if (isRegistrationEnabled)
                    {
                        <EditForm Model="@registerRequest" OnValidSubmit="@HandleRegister">
                            <DataAnnotationsValidator />

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Nombre</label>
                                    <InputText @bind-Value="registerRequest.FirstName" class="form-control" placeholder="Juan" />
                                    <ValidationMessage For="@(() => registerRequest.FirstName)" />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Apellido</label>
                                    <InputText @bind-Value="registerRequest.LastName" class="form-control" placeholder="Pérez" />
                                    <ValidationMessage For="@(() => registerRequest.LastName)" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <InputText @bind-Value="registerRequest.Email" class="form-control" placeholder="tu@email.com" />
                                <ValidationMessage For="@(() => registerRequest.Email)" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Contraseña</label>
                                <InputText @bind-Value="registerRequest.Password" type="password" class="form-control" placeholder="••••••••" />
                                <ValidationMessage For="@(() => registerRequest.Password)" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Confirmar Contraseña</label>
                                <InputText @bind-Value="registerRequest.ConfirmPassword" type="password" class="form-control" placeholder="••••••••" />
                                <ValidationMessage For="@(() => registerRequest.ConfirmPassword)" />
                            </div>

                            <button type="submit" class="btn btn-primary w-100" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                Registrarse
                            </button>
                        </EditForm>
                    }
                    else
                    {
                        <div class="alert alert-warning" role="alert">
                            El registro de usuarios está temporalmente deshabilitado. Por favor contacta a un administrador para obtener acceso.
                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo("/login")'>Volver al inicio de sesión</button>
                        </div>
                    }

                    <hr class="my-4" />

                    <div class="text-center">
                        <p class="mb-0">
                            ¿Ya tienes cuenta? <a href="/login">Inicia sesión aquí</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private RegisterRequest registerRequest = new();
    private string? errorMessage;
    private bool isLoading = false;
    private bool isRegistrationEnabled = true;
    private bool isCheckingAvailability = true;

    protected override async Task OnInitializedAsync()
    {
        if (await AuthService.IsAuthenticatedAsync())
        {
            NavigationManager.NavigateTo("/dashboard", replace: true);
            return;
        }

        try
        {
            isRegistrationEnabled = await AuthService.IsRegistrationEnabledAsync();
        }
        catch (Exception ex)
        {
            errorMessage = "No se pudo verificar la disponibilidad de registro: " + ex.Message;
            isRegistrationEnabled = false;
        }
        finally
        {
            isCheckingAvailability = false;
        }
    }

    private async Task HandleRegister()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var result = await AuthService.RegisterAsync(registerRequest);

            if (result.Success)
            {
                NavigationManager.NavigateTo("/dashboard", replace: true);
            }
            else
            {
                errorMessage = result.ErrorMessage;
                if (!string.IsNullOrWhiteSpace(result.ErrorMessage) &&
                    result.ErrorMessage.Contains("deshabilitado", System.StringComparison.OrdinalIgnoreCase))
                {
                    isRegistrationEnabled = false;
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error al conectar con el servidor: " + ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }
}
