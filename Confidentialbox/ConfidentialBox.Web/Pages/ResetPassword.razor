@page "/reset-password"
@using System
@using ConfidentialBox.Core.DTOs
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Restablecer contraseña - ConfidentialBox</PageTitle>

<h1 class="mb-4">Restablecer contraseña</h1>

@if (success)
{
    <div class="alert alert-success">
        Tu contraseña fue actualizada correctamente. <a href="/login">Inicia sesión</a> con tu nueva clave.
    </div>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (!success)
{
    <EditForm Model="model" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Correo electrónico</label>
            <InputText @bind-Value="model.Email" class="form-control" readonly="@lockEmailField" />
        </div>

        <div class="mb-3">
            <label class="form-label">Nueva contraseña</label>
            <InputText @bind-Value="model.NewPassword" class="form-control" type="password" />
            <ValidationMessage For="() => model.NewPassword" />
        </div>

        <div class="mb-3">
            <label class="form-label">Confirmar contraseña</label>
            <InputText @bind-Value="confirmPassword" class="form-control" type="password" />
        </div>

        <button class="btn btn-primary" disabled="@isSubmitting">
            @if (isSubmitting)
            {
                <span class="spinner-border spinner-border-sm me-2"></span> Guardando...
            }
            else
            {
                <span>Actualizar contraseña</span>
            }
        </button>

        <button type="button" class="btn btn-link" @onclick="() => Navigation.NavigateTo("/login")">Cancelar</button>
    </EditForm>
}

@code {
    private readonly ResetPasswordRequest model = new();
    private string confirmPassword = string.Empty;
    private bool isSubmitting;
    private bool success;
    private string? errorMessage;
    private bool lockEmailField;

    protected override void OnInitialized()
    {
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        var query = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query);
        if (query.TryGetValue("email", out var email))
        {
            model.Email = email!;
        }

        if (query.TryGetValue("token", out var token))
        {
            model.Token = token!;
        }

        lockEmailField = !string.IsNullOrWhiteSpace(model.Email);
    }

    private async Task HandleSubmit()
    {
        errorMessage = null;
        if (!string.Equals(model.NewPassword, confirmPassword, StringComparison.Ordinal))
        {
            errorMessage = "Las contraseñas no coinciden";
            return;
        }

        if (string.IsNullOrWhiteSpace(model.Token))
        {
            errorMessage = "El enlace de recuperación no es válido";
            return;
        }

        isSubmitting = true;
        try
        {
            success = await AuthService.ResetPasswordAsync(model);
            if (!success)
            {
                errorMessage = "No pudimos actualizar tu contraseña. Verifica el enlace de recuperación o contacta al administrador.";
            }
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
