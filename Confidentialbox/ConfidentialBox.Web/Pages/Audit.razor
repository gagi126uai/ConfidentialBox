@page "/audit"
@attribute [Authorize(Roles = "Admin")]
@inject HttpClient Http

<PageTitle>Auditoría - ConfidentialBox</PageTitle>

<h1><i class="fas fa-clipboard-list"></i> Registro de Auditoría</h1>

<div class="card mt-4">
    <div class="card-body">
        @if (isLoading)
        {
            <div class="text-center my-5">
                <div class="spinner-border" role="status"></div>
            </div>
        }
        else if (auditLogs != null && auditLogs.Items.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Fecha/Hora</th>
                            <th>Usuario</th>
                            <th>Acción</th>
                            <th>Tipo de Entidad</th>
                            <th>ID Entidad</th>
                            <th>IP</th>
                            <th>Dispositivo</th>
                            <th>SO</th>
                            <th>Navegador</th>
                            <th>Ubicación</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in auditLogs.Items)
                        {
                            <tr>
                                <td>@log.Timestamp.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                <td>@log.UserName</td>
                                <td>
                                    <span class="badge @GetActionBadgeClass(log.Action)">@log.Action</span>
                                </td>
                                <td>@log.EntityType</td>
                                <td>@log.EntityId</td>
                                <td><small class="text-muted">@log.IpAddress</small></td>
                                <td>@(string.IsNullOrWhiteSpace(log.DeviceName) ? log.DeviceType ?? "-" : log.DeviceName)</td>
                                <td>@(string.IsNullOrWhiteSpace(log.OperatingSystem) ? "-" : log.OperatingSystem)</td>
                                <td>@(string.IsNullOrWhiteSpace(log.Browser) ? "-" : log.Browser)</td>
                                <td>@(string.IsNullOrWhiteSpace(log.Location) ? "Sin datos" : log.Location)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Paginación -->
            <nav>
                <ul class="pagination justify-content-center">
                    <li class="page-item @(auditLogs.HasPreviousPage ? "" : "disabled")">
                        <button class="page-link" @onclick="() => ChangePage(auditLogs.PageNumber - 1)">Anterior</button>
                    </li>
                    <li class="page-item disabled">
                        <span class="page-link">Página @auditLogs.PageNumber de @auditLogs.TotalPages</span>
                    </li>
                    <li class="page-item @(auditLogs.HasNextPage ? "" : "disabled")">
                        <button class="page-link" @onclick="() => ChangePage(auditLogs.PageNumber + 1)">Siguiente</button>
                    </li>
                </ul>
            </nav>
        }
        else
        {
            <p class="text-center text-muted my-5">No hay registros de auditoría</p>
        }
    </div>
</div>

@code {
    private PagedResult<AuditLogDto>? auditLogs;
    private bool isLoading = true;
    private int currentPage = 1;

    protected override async Task OnInitializedAsync()
    {
        await LoadAuditLogs();
    }

    private async Task LoadAuditLogs()
    {
        isLoading = true;
        try
        {
            auditLogs = await Http.GetFromJsonAsync<PagedResult<AuditLogDto>>(
                $"api/audit?pageNumber={currentPage}&pageSize=50");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading audit logs: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ChangePage(int page)
    {
        // Evita ir a páginas inválidas
        if (page < 1) return;
        if (auditLogs != null && page > auditLogs.TotalPages) return;

        currentPage = page;
        await LoadAuditLogs();
    }

    private string GetActionBadgeClass(string action) => action switch
    {
        "FileUploaded" => "bg-success",
        "FileDeleted" => "bg-danger",
        "FileBlocked" => "bg-warning",
        "FileUnblocked" => "bg-info",
        "AccessGranted" => "bg-primary",
        "AccessBlocked" => "bg-danger",
        _ => "bg-secondary"
    };
}
