@page "/files"
@using Microsoft.AspNetCore.Authorization
@using ConfidentialBox.Core.DTOs
@using System.Linq
@attribute [Authorize]
@inject IFileService FileService
@inject IJSRuntime JS
@inject NavigationManager NavigationManager

<PageTitle>Mis Archivos - ConfidentialBox</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-folder-open"></i> Mis Archivos</h1>
    <a href="/upload" class="btn btn-primary">
        <i class="fas fa-plus"></i> Subir Nuevo Archivo
    </a>
</div>

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
    </div>
}

@if (isLoading)
{
    <div class="text-center my-5">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else if (files != null && files.Any())
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Tamaño</th>
                            <th>Fecha de Subida</th>
                            <th>Expira</th>
                            <th>Accesos</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var file in files)
                        {
                            <tr>
                                <td>
                                    <button type="button"
                                            class="secure-file-link"
                                            @onclick="() => OpenFile(file)">
                                        <i class="fas @(file.IsPdf ? "fa-file-pdf text-danger" : "fa-file text-primary") me-2"></i>
                                        @file.OriginalFileName
                                    </button>
                                </td>
                                <td>@FormatBytes(file.FileSizeBytes)</td>
                                <td>@file.UploadedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (file.ExpiresAt.HasValue)
                                    {
                                        <span>@file.ExpiresAt.Value.ToString("dd/MM/yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Nunca</span>
                                    }
                                </td>
                                <td>
                                    @file.CurrentAccessCount
                                    @if (file.MaxAccessCount.HasValue)
                                    {
                                        <span>/ @file.MaxAccessCount</span>
                                    }
                                </td>
                                <td>
                                    @if (file.IsBlocked)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-ban"></i> Bloqueado
                                        </span>
                                    }
                                    else if (file.ExpiresAt.HasValue && file.ExpiresAt.Value < DateTime.UtcNow)
                                    {
                                        <span class="badge bg-warning">
                                            <i class="fas fa-clock"></i> Expirado
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check"></i> Activo
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-outline-primary" @onclick="() => CopyShareLink(file.ShareLink, file.IsPdf)">
                                            <i class="fas fa-link"></i>
                                        </button>
                                        <button class="btn btn-outline-info" @onclick="async () => await ViewFileDetails(file.Id)">
                                            <i class="fas fa-info-circle"></i>
                                        </button>
                                        <button class="btn btn-outline-danger" @onclick="() => DeleteFile(file)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-folder-open fa-5x text-muted mb-3"></i>
            <h4>No tienes archivos subidos</h4>
            <p class="text-muted">Comienza subiendo tu primer archivo</p>
            <a href="/upload" class="btn btn-primary">
                <i class="fas fa-cloud-upload-alt"></i> Subir Archivo
            </a>
        </div>
</div>
}

@if (showFileDetails && selectedFile != null)
{
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detalles del archivo - @selectedFile.OriginalFileName</h5>
                    <button type="button" class="btn-close" @onclick="CloseFileDetails"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <h6 class="fw-semibold">Información básica</h6>
                            <dl class="row mb-0">
                                <dt class="col-sm-5">Nombre</dt>
                                <dd class="col-sm-7">@selectedFile.OriginalFileName</dd>

                                <dt class="col-sm-5">Tipo</dt>
                                <dd class="col-sm-7">@selectedFile.FileExtension.ToUpperInvariant()</dd>

                                <dt class="col-sm-5">Tamaño</dt>
                                <dd class="col-sm-7">@FormatBytes(selectedFile.FileSizeBytes)</dd>

                                <dt class="col-sm-5">Autor</dt>
                                <dd class="col-sm-7">@(string.IsNullOrWhiteSpace(selectedFile.UploadedByUserName) ? "Tú" : selectedFile.UploadedByUserName)</dd>

                                <dt class="col-sm-5">Fecha de subida</dt>
                                <dd class="col-sm-7">@selectedFile.UploadedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</dd>

                                <dt class="col-sm-5">Expira</dt>
                                <dd class="col-sm-7">
                                    @if (selectedFile.ExpiresAt.HasValue)
                                    {
                                        <span>@selectedFile.ExpiresAt.Value.ToLocalTime().ToString("dd/MM/yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Nunca</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h6 class="fw-semibold">Compartir</h6>
                            <p class="text-muted small">Copia o abre el enlace seguro para compartir el archivo. También puedes usar el botón inferior en la tabla.</p>
                            @if (string.IsNullOrWhiteSpace(selectedFile.ShareLink))
                            {
                                <div class="alert alert-warning mb-0">
                                    <i class="fas fa-link-slash me-2"></i>Este archivo aún no tiene un enlace público disponible.
                                </div>
                            }
                            else
                            {
                                var shareUrl = BuildShareUrl(selectedFile);
                                <div class="input-group mb-2">
                                    <input class="form-control" value="@shareUrl" readonly />
                                    <button class="btn btn-outline-primary" @onclick="() => CopyShareLink(selectedFile.ShareLink, selectedFile.IsPdf)">
                                        <i class="fas fa-copy"></i>
                                    </button>
                                    <a class="btn btn-outline-secondary" href="@shareUrl" target="_blank" rel="noopener">
                                        <i class="fas fa-up-right-from-square"></i>
                                    </a>
                                </div>
                                <small class="text-muted">Comparte este link con las personas autorizadas o envíalo por otro canal seguro.</small>
                            }
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" @onclick="CloseFileDetails">Listo</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop show"></div>
}

@code {
    private List<FileDto> files = new();
    private bool isLoading = true;
    private string? successMessage;
    private string? errorMessage;

    private bool showFileDetails;
    private FileDto? selectedFile;

    protected override async Task OnInitializedAsync()
    {
        await LoadFiles();
    }

    private async Task LoadFiles()
    {
        isLoading = true;
        try
        {
            files = await FileService.GetMyFilesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading files: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CopyShareLink(string shareLink, bool isPdf)
    {
        var fullLink = BuildShareUrl(shareLink, isPdf);
        await JS.InvokeVoidAsync("navigator.clipboard.writeText", fullLink);

        successMessage = "Link copiado al portapapeles";
        StateHasChanged();
    }

    private async Task ViewFileDetails(int fileId)
    {
        try
        {
            selectedFile = await FileService.GetFileByIdAsync(fileId)
                ?? files.FirstOrDefault(f => f.Id == fileId);

            if (selectedFile == null)
            {
                errorMessage = "No se encontraron los detalles del archivo seleccionado.";
                return;
            }

            showFileDetails = true;
        }
        catch (Exception ex)
        {
            errorMessage = $"No se pudieron cargar los detalles del archivo: {ex.Message}";
        }
    }

    private void OpenFile(FileDto file)
    {
        if (string.IsNullOrWhiteSpace(file.ShareLink))
        {
            return;
        }

        var destination = file.IsPdf ? $"/view-pdf/{file.ShareLink}" : $"/access/{file.ShareLink}";
        NavigationManager.NavigateTo(destination);
    }

    private async Task DeleteFile(FileDto file)
    {
        var confirm = await JS.InvokeAsync<bool>("confirm", "¿Estás seguro de que deseas eliminar este archivo?");
        if (!confirm)
        {
            return;
        }

        errorMessage = null;
        successMessage = null;

        try
        {
            var result = await FileService.DeleteFileAsync(file.Id);
            if (result)
            {
                successMessage = $"'{file.OriginalFileName}' fue enviado a la papelera.";
                await LoadFiles();
            }
            else
            {
                errorMessage = "No se pudo eliminar el archivo. Intenta nuevamente.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al eliminar el archivo: {ex.Message}";
        }
    }

    private void CloseFileDetails()
    {
        showFileDetails = false;
        selectedFile = null;
    }

    private static string FormatBytes(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len /= 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    private string BuildShareUrl(FileDto file) => BuildShareUrl(file.ShareLink, file.IsPdf);

    private string BuildShareUrl(string shareLink, bool isPdf)
    {
        var baseUri = NavigationManager.BaseUri.TrimEnd('/');
        return isPdf
            ? $"{baseUri}/view-pdf/{shareLink}"
            : $"{baseUri}/access/{shareLink}";
    }
}
