@page "/files"
@using Microsoft.AspNetCore.Authorization
@using ConfidentialBox.Core.DTOs
@using System.Linq
@attribute [Authorize]
@inject IFileService FileService
@inject IJSRuntime JS
@inject NavigationManager NavigationManager

<PageTitle>Mis Archivos - ConfidentialBox</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-folder-open"></i> Mis Archivos</h1>
    <a href="/upload" class="btn btn-primary">
        <i class="fas fa-plus"></i> Subir Nuevo Archivo
    </a>
</div>

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
    </div>
}

@if (isLoading)
{
    <div class="text-center my-5">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else if (files != null && files.Any())
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Tamaño</th>
                            <th>Fecha de Subida</th>
                            <th>Expira</th>
                            <th>Accesos</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var file in files)
                        {
                            <tr>
                                <td>
                                    <button type="button"
                                            class="secure-file-link"
                                            @onclick="() => OpenFile(file)">
                                        <i class="fas @(file.IsPdf ? "fa-file-pdf text-danger" : "fa-file text-primary") me-2"></i>
                                        @file.OriginalFileName
                                    </button>
                                </td>
                                <td>@FormatBytes(file.FileSizeBytes)</td>
                                <td>@file.UploadedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (file.ExpiresAt.HasValue)
                                    {
                                        <span>@file.ExpiresAt.Value.ToString("dd/MM/yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Nunca</span>
                                    }
                                </td>
                                <td>
                                    @file.CurrentAccessCount
                                    @if (file.MaxAccessCount.HasValue)
                                    {
                                        <span>/ @file.MaxAccessCount</span>
                                    }
                                </td>
                                <td>
                                    @if (file.IsBlocked)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-ban"></i> Bloqueado
                                        </span>
                                    }
                                    else if (file.ExpiresAt.HasValue && file.ExpiresAt.Value < DateTime.UtcNow)
                                    {
                                        <span class="badge bg-warning">
                                            <i class="fas fa-clock"></i> Expirado
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check"></i> Activo
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-outline-primary" @onclick="() => CopyShareLink(file.ShareLink, file.IsPdf)">
                                            <i class="fas fa-link"></i>
                                        </button>
                                        <button class="btn btn-outline-info" @onclick="async () => await ViewFileDetails(file.Id)">
                                            <i class="fas fa-info-circle"></i>
                                        </button>
                                        <button class="btn btn-outline-danger" @onclick="() => DeleteFile(file)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-folder-open fa-5x text-muted mb-3"></i>
            <h4>No tienes archivos subidos</h4>
            <p class="text-muted">Comienza subiendo tu primer archivo</p>
            <a href="/upload" class="btn btn-primary">
                <i class="fas fa-cloud-upload-alt"></i> Subir Archivo
            </a>
        </div>
</div>
}

@if (showAccessLogs && selectedFile != null)
{
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Auditoría de accesos - @selectedFile.OriginalFileName</h5>
                    <button type="button" class="btn-close" @onclick="CloseAccessLogs"></button>
                </div>
                <div class="modal-body">
                    @if (accessLogsLoading)
                    {
                        <div class="text-center my-4">
                            <div class="spinner-border" role="status"></div>
                            <p class="mt-3 text-muted">Cargando historial...</p>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(accessLogsError))
                    {
                        <div class="alert alert-danger">@accessLogsError</div>
                    }
                    else if (accessLogs.Any())
                    {
                        <div class="row g-3">
                            <div class="col-lg-7">
                                <div class="table-responsive access-log-table">
                                    <table class="table table-hover table-sm align-middle">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Fecha</th>
                                                <th>Usuario</th>
                                                <th>IP</th>
                                                <th>Dispositivo</th>
                                                <th>Sistema</th>
                                                <th>Navegador</th>
                                                <th>Ubicación</th>
                                                <th>Estado</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var log in accessLogs)
                                            {
                                                <tr class="@(highlightedLog == log ? "table-primary" : string.Empty)" @onclick="() => HighlightLog(log)">
                                                    <td>@log.AccessedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")</td>
                                                    <td>@(string.IsNullOrWhiteSpace(log.AccessedByUserName) ? "-" : log.AccessedByUserName)</td>
                                                    <td><code>@log.AccessedByIp</code></td>
                                                    <td>@(string.IsNullOrWhiteSpace(log.DeviceName) ? log.DeviceType ?? "-" : log.DeviceName)</td>
                                                    <td>@(string.IsNullOrWhiteSpace(log.OperatingSystem) ? "-" : log.OperatingSystem)</td>
                                                    <td>@(string.IsNullOrWhiteSpace(log.Browser) ? "-" : log.Browser)</td>
                                                    <td>@(string.IsNullOrWhiteSpace(log.Location) ? "Sin datos" : log.Location)</td>
                                                    <td>
                                                        <span class="badge @(log.WasAuthorized ? "bg-success" : "bg-danger")">@FormatAccessStatus(log)</span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div class="border rounded h-100 p-3">
                                    @if (highlightedLog != null)
                                    {
                                        <h6 class="fw-semibold">Detalle seleccionado</h6>
                                        <ul class="list-unstyled small mb-3">
                                            <li><strong>Acción:</strong> @highlightedLog.Action</li>
                                            <li><strong>Autorizado:</strong> @(highlightedLog.WasAuthorized ? "Sí" : "No")</li>
                                            <li><strong>IP:</strong> <code>@highlightedLog.AccessedByIp</code></li>
                                            <li><strong>Dispositivo:</strong> @(string.IsNullOrWhiteSpace(highlightedLog.DeviceType) ? "-" : highlightedLog.DeviceType)</li>
                                            <li><strong>SO:</strong> @(string.IsNullOrWhiteSpace(highlightedLog.OperatingSystem) ? "-" : highlightedLog.OperatingSystem)</li>
                                            <li><strong>Navegador:</strong> @(string.IsNullOrWhiteSpace(highlightedLog.Browser) ? "-" : highlightedLog.Browser)</li>
                                            <li><strong>Ubicación:</strong> @(string.IsNullOrWhiteSpace(highlightedLog.Location) ? "Sin datos" : highlightedLog.Location)</li>
                                        </ul>

                                        var mapUrl = BuildMapUrl(highlightedLog);
                                        if (!string.IsNullOrEmpty(mapUrl))
                                        {
                                            <div class="ratio ratio-4x3">
                                                <iframe src="@mapUrl" loading="lazy" referrerpolicy="no-referrer" title="Ubicación del acceso"></iframe>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="alert alert-light small mb-0">
                                                <i class="fas fa-map-marker-alt"></i> No hay coordenadas disponibles para este acceso.
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle"></i> Todavía no se registraron accesos para este archivo.
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-outline-secondary" @onclick="CloseAccessLogs">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop show"></div>
}

@code {
    private List<FileDto> files = new();
    private bool isLoading = true;
    private string? successMessage;
    private string? errorMessage;

    private bool showAccessLogs;
    private FileDto? selectedFile;
    private List<FileAccessLogDto> accessLogs = new();
    private bool accessLogsLoading;
    private string? accessLogsError;
    private FileAccessLogDto? highlightedLog;

    protected override async Task OnInitializedAsync()
    {
        await LoadFiles();
    }

    private async Task LoadFiles()
    {
        isLoading = true;
        try
        {
            files = await FileService.GetMyFilesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading files: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CopyShareLink(string shareLink, bool isPdf)
    {
        var baseUri = NavigationManager.BaseUri.TrimEnd('/');
        var fullLink = isPdf
            ? $"{baseUri}/view-pdf/{shareLink}"
            : $"{baseUri}/access/{shareLink}";
        await JS.InvokeVoidAsync("navigator.clipboard.writeText", fullLink);

        successMessage = "Link copiado al portapapeles";
        StateHasChanged();
    }

    private async Task ViewFileDetails(int fileId)
    {
        selectedFile = files.FirstOrDefault(f => f.Id == fileId);
        showAccessLogs = true;
        accessLogsLoading = true;
        accessLogsError = null;
        accessLogs.Clear();
        highlightedLog = null;

        try
        {
            var logs = await FileService.GetAccessLogsAsync(fileId);
            accessLogs = logs.OrderByDescending(l => l.AccessedAt).ToList();
            highlightedLog = accessLogs.FirstOrDefault(l => l.Latitude.HasValue && l.Longitude.HasValue)
                ?? accessLogs.FirstOrDefault();
        }
        catch (Exception ex)
        {
            accessLogsError = $"No se pudieron cargar los registros de auditoría: {ex.Message}";
        }
        finally
        {
            accessLogsLoading = false;
        }
    }

    private void OpenFile(FileDto file)
    {
        if (string.IsNullOrWhiteSpace(file.ShareLink))
        {
            return;
        }

        var destination = file.IsPdf ? $"/view-pdf/{file.ShareLink}" : $"/access/{file.ShareLink}";
        NavigationManager.NavigateTo(destination);
    }

    private async Task DeleteFile(FileDto file)
    {
        var confirm = await JS.InvokeAsync<bool>("confirm", "¿Estás seguro de que deseas eliminar este archivo?");
        if (!confirm)
        {
            return;
        }

        errorMessage = null;
        successMessage = null;

        try
        {
            var result = await FileService.DeleteFileAsync(file.Id);
            if (result)
            {
                successMessage = $"'{file.OriginalFileName}' fue enviado a la papelera.";
                await LoadFiles();
            }
            else
            {
                errorMessage = "No se pudo eliminar el archivo. Intenta nuevamente.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al eliminar el archivo: {ex.Message}";
        }
    }

    private void CloseAccessLogs()
    {
        showAccessLogs = false;
        selectedFile = null;
        accessLogs.Clear();
        accessLogsError = null;
        highlightedLog = null;
    }

    private void HighlightLog(FileAccessLogDto log)
    {
        highlightedLog = log;
    }

    private static string FormatBytes(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len /= 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    private static string FormatAccessStatus(FileAccessLogDto log)
        => log.WasAuthorized ? "Autorizado" : "Bloqueado";

    private string? BuildMapUrl(FileAccessLogDto? log)
    {
        if (log?.Latitude is null || log.Longitude is null)
        {
            return null;
        }

        return $"https://maps.google.com/maps?q={log.Latitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture)},{log.Longitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture)}&z=14&output=embed";
    }
}
