@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject IAuthService AuthService
@inject AuthenticationStateProvider AuthStateProvider
@inject ClientContextService ClientContextService
@inject IJSRuntime JSRuntime
@using System.Security.Claims

<div class="layout-shell">
    <aside class="layout-sidebar">
        <NavMenu />
    </aside>

    <section class="layout-main">
        <header class="layout-header">
            <div class="layout-header__title">
                <h1 class="app-title">ConfidentialBox</h1>
                <p class="app-subtitle">Tu centro seguro para archivos sensibles</p>
            </div>

            <AuthorizeView>
                <Authorized Context="authContext">
                    <div class="layout-header__actions">
                        <NotificationBell />
                        <div class="layout-header__profile">
                            <span class="greeting">Hola,</span>
                            <span class="username">@GetDisplayName(authContext.User)</span>
                        </div>
                        <button class="btn btn-sm btn-outline-light" @onclick="Logout">
                            <i class="fas fa-sign-out-alt me-1"></i> Salir
                        </button>
                    </div>
                </Authorized>
            </AuthorizeView>
        </header>

        <main class="layout-content">
            @Body
        </main>
    </section>
</div>

@code {
    private bool contextInitialized;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !contextInitialized)
        {
            await ClientContextService.EnsureInitializedAsync(JSRuntime);
            contextInitialized = true;
        }
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();

        ((CustomAuthStateProvider)AuthStateProvider)
            .NotifyUserLogout();

        NavigationManager.NavigateTo("/login", replace: true);
    }

    private static string GetDisplayName(ClaimsPrincipal user)
    {
        var fullName = user.FindFirst("FullName")?.Value;
        if (!string.IsNullOrWhiteSpace(fullName))
        {
            var separatorIndex = fullName.IndexOf(' ');
            if (separatorIndex > 0)
            {
                return fullName[..separatorIndex];
            }

            return fullName;
        }

        var givenName = user.FindFirst(ClaimTypes.GivenName)?.Value;
        if (!string.IsNullOrWhiteSpace(givenName))
        {
            return givenName;
        }

        var name = user.Identity?.Name;
        if (!string.IsNullOrWhiteSpace(name))
        {
            return name;
        }

        var email = user.FindFirst(ClaimTypes.Email)?.Value;
        return string.IsNullOrWhiteSpace(email) ? "usuario" : email;
    }
}
